{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    
    "server#build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "llm-client#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
